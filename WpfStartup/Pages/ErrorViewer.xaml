      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit" x:Class="SevenDaysConfigUI.Pages.ErrorViewer" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
	Title="ErrorViewer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="64*"/>
        </Grid.RowDefinitions>
        <Label Content="Uh Oh, something went wrong. Select an item to view more information" HorizontalAlignment="Left" Margin="38,38,0,0" VerticalAlignment="Top" Width="529" Height="40" VerticalContentAlignment="Center"/>
        <ScrollViewer HorizontalAlignment="Stretch" Margin="10,22,10,10" Grid.Row="1" VerticalAlignment="Stretch" Background="White">
            <Controls:Accordion x:Name="accErrorContainer" />
        </ScrollViewer>
    </Grid>
</Page>
